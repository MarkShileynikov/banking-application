<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalendarTextAppearance" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarWeekDayAppearance" parent="android:Widget.TextView">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyCalendarViewTheme">
        <item name="android:calendarViewStyle">@style/MyCalendarViewStyle</item>
    </style>

    <style name="MyCalendarViewStyle">
        <item name="android:weekDayTextAppearance">@style/MyWeekDayTextAppearance</item>
        <item name="android:headerMonthTextAppearance">@style/MyHeaderMonthTextAppearance</item>
    </style>

    <style name="MyWeekDayTextAppearance">
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="MyHeaderMonthTextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>